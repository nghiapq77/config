# Key bindings

super + Return
    $TERMINAL
super + d
    dmenu_run_i
super + r
    $TERMINAL -e ranger
super + w
    $BROWSER
super + o ; {w,v,h,m,c,b}
    {wifi_selector,$TERMINAL -e nvim,$TERMINAL -e htop,$TERMINAL -e neomutt,$TERMINAL -e calcurse,$TERMINAL -e bluetoothctl}
super + e
    toggle_lang; pkill -RTMIN+11 dwmblocks
super + n
    toggle_redshift
super + p
    passmenu_vert
super + equal
    dmenu_calc
F8
    toggle_hdmi
{super,shift} + Print
    {maimpick,maim -s | xclip -selection clipboard -t image/png}
XF86AudioMute
    amixer -D pulse set Master 1+ toggle; pkill -RTMIN+10 dwmblocks
XF86Audio{Raise,Lower}Volume
    amixer -D pulse -q set Master 5%{+,-}; pkill -RTMIN+10 dwmblocks
XF86MonBrightness{Up,Down}
    light -{A,U} 11 && notify-send -u low -t 1000 "Brightness: $(light)%"
