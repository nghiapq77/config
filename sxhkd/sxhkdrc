# Key bindings

super + Return
    $TERMINAL
super + d
    dmenu_run_i
super + r
    $TERMINAL -e ranger
super + w
    $BROWSER
super + o ; {w,v,h,s,m,c,b}
    {wifi_selector,$TERMINAL -e nvim,$TERMINAL -e htop,skypeforlinux,$TERMINAL -e neomutt,$TERMINAL -e calcurse,$TERMINAL -e bluetoothctl}
super + n
    toggle_redshift.sh
super + p
    passmenu_vert
super + equal
    dmenu_calc
F8
    toggle_hdmi
XF86AudioMute
    amixer -D pulse set Master 1+ toggle; pkill -RTMIN+10 dwmblocks
XF86Audio{Raise,Lower}Volume
    amixer -D pulse -q set Master 5%{+,-}; pkill -RTMIN+10 dwmblocks
XF86MonBrightnessDown
    brightness down
XF86MonBrightnessUp
    brightness up
